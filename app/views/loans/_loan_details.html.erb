<table class="table table-dark table-bordered table-striped">
   <tbody>
    <tr>
      <th>Control number:</th>
      <td><%= @loan.control_number %></td>
    </tr>
      <tr>
         <th>Member:</th>
         <td><%= @loan.member.full_name %></td>
      </tr>
      <tr>
         <th>Loan type:</th>
         <td><%= @loan.loan_type.loan_type_name %></td>
      </tr>
      <tr>
         <th>Principal Amount:</th>
         <td><%= number_to_currency(@loan.loan_amount, unit: "₱") %></td>
      </tr>
      <tr>
         <th>Balance:</th>
         <td><%= number_to_currency(@loan.loan_balance, unit: "₱") %></td>
      </tr>
      <tr>
         <th>Duration:</th>
         <td><%= @loan.loan_duration %></td>
      </tr>
      <tr>
         <th>Status:</th>
         <td>
            <% if loan.loan_status == 0 %>
               <span class="badge badge-pill badge-info">Pending</span>
            <% elsif loan.loan_status == 1 %>
               <span class="badge badge-pill badge-success">Approved</span>
            <% else %>
               <span class="badge badge-pill badge-danger">Declined</span>
            <% end %>
         </td>
      </tr>
      <tr>
        <th>Purpose:</th>
        <td><%= loan.purpose %></td>
      </tr>
      <tr>
        <th>Remarks:</th>
        <td><%= loan.remarks %></td>
      </tr>
      <tr>
        <th>Processed by:</th>
        <td><%= loan.processed_by.present? ? User.find(loan.processed_by).email : "N/A" %></td>
      </tr>
   </tbody>
</table>
<div class="text-center">
   <%= link_to("Back", {:action => 'index'}, :class => 'btn btn-secondary') %>
   <%= link_to("Edit", {:action => 'edit', :id => @loan.id}, :class => 'btn btn-fin') %>
</div>
