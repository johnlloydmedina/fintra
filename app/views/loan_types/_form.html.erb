<%= form_with(model: loan_type, local: true) do |form| %>
  <% if loan_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(loan_type.errors.count, "error") %> prohibited this loan type from being saved:</h2>
      <ul>
        <% loan_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :loan_type_name %>
    <%= form.text_field :loan_type_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :interest %>
    <%= form.select :interest, options_for_select([['5%', 5], ['10%', 10], ['15%', 15], ['20%', 20]]), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :duration %>
    <%= form.select :duration, options_for_select([['1 week', '1 week'], ['1 month', '1 month'], ['3 months', '3 months'], ['6 months', '6 months'], ['1 year', '1 year']]), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :penalty %>
    <%= form.select :penalty, options_for_select([['0%', 0], ['5%', 5]]), {}, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
