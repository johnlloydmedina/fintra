  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Loan Types</h3>
    <%= link_to new_loan_type_path, class: 'btn btn-dark text-fin' do %>
      <i class="fas fa-plus"></i> New Loan Type
    <% end %>
  </div>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Interest</th>
      <th>Duration</th>
      <th>Penalty</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @loan_types.each do |loan_type| %>
      <tr>
        <td><%= loan_type.loan_type_name %></td>
        <td><%= loan_type.description %></td>
        <td><%= loan_type.interest %>%</td>
        <td><%= loan_type.duration %></td>
        <td><%= loan_type.penalty %>%</td>
        <td>
            <%= link_to loan_type_path(loan_type), class: 'btn btn-info btn-sm', data: { toggle: "modal", target: "#loanTypeModal", remote: true } do %>
            <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_loan_type_path(loan_type), class: 'btn btn-primary btn-sm' do %>
            <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to loan_type_path(loan_type), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
            <i class="fas fa-trash-alt"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
