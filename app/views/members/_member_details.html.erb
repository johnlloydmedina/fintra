<table class="table table-dark table-bordered table-striped">
   <tbody>
      <tr>
         <td class="text-center">
            <% if member.profile_picture.present? %>
            <%= image_tag(member.profile_picture.url, width: 150, height: 150) %>
            <% end %>
         </td>
         <td class="text-center">
            <h3><%= @member.full_name %></h3>
            <p><%= @member.member_id %></p>
            <h6><%= @member.complete_address %></h6>
            <h6><%= @member.contact_number %></h6>
            <h6><%= @member.email_address %></h6>
         </td>
      </tr>
      <tr>
         <th>Gender:</th>
         <td>
            <% if @member.gender == true %>
               Male
            <% else %>
               Female
            <% end %>
         </td>
      </tr>
      <tr>
         <th>Civil status:</th>
         <td>
            <% if @member.civil_status == 0 %>
               Single
            <% elsif @member.civil_status == 1 %>
               Married
            <% elsif @member.civil_status == 2 %>
               Divorced
            <% else %>
               Widowed
            <% end %>
         </td>
      </tr>
      <tr>
         <th>Birthdate:</th>
         <td><%= @member.birthdate %></td>
      </tr>
      <tr>
         <th>Age:</th>
         <td><%= @member.age %></td>
      </tr>
      <tr>
         <th>Username:</th>
         <td><%= @member.username %></td>
      </tr>
      <tr>
         <th>Status:</th>
         <td>
            <% if @member.account_status == 1 %>
               <span class="badge badge-pill badge-success">Active</span>
            <% else %>
               <span class="badge badge-pill badge-secondary">Inactive</span>
            <% end %>
         </td>
      </tr>
   </tbody>
</table>
<div class="text-center">
   <%= link_to("Back", {:action => 'index'}, :class => 'btn btn-secondary') %>
   <%= link_to("Edit", {:action => 'edit', :id => @member.id}, :class => 'btn btn-fin') %>
</div>